#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int int_a;
	char char_c;
	float float_f;
	double double_d;
	long double long_double;


	printf("Size of int: %d\n", sizeof(int_a));
	printf("size of char: %d\n", sizeof(char_c));
	printf("size of char: %d\n", sizeof(float_f));
	printf("size of char: %d\n", sizeof(long_double));

	return EXIT_SUCCESS;
}
